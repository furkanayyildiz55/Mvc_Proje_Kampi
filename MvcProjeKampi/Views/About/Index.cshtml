@using EntityLayer.Concrete
@model List<About>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda Veri Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Hakkımda Başlığı</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.AboutDetails1</td>
            <td><a class="btn btn-warning" href="#">Aktif Yap</a></td>
            <td><a class="btn btn-warning" href="#">Pasif Yap</a></td>
        </tr>
    }
</table>

<!--SOLİD prensiplerine göre her sayfa sadece kendi işini yapmalı. Bu nedenle model olarak oluşturulan ekleme kısmını partial view içine 
    ekledik-->
