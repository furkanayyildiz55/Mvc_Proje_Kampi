@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td style="text-align:center"><a href="/AdminCategory/DeleteKategory/@item.CategoryID" class="btn btn-danger">Sil</a></td> @*Yapılan link yönlendirme ile /AdminCategory/DeleteKategory/@item.CategoryID" hethodu çalıştırıyoruz ve aynı zamanda category ıd parametresini gönderiyoruz *@
            <td style="text-align:center"><a href="/AdminCategory/EditCategory/@item.CategoryID" class="btn btn-warning">Güncelle</a></td>
            <td style="text-align:center"><a href="#" class="btn btn-primary center">başlıklar</a></td>
        </tr>
    }
</table>
<a href="/AdminCategory/AddCategory" class="btn btn-info">Yeni Kategori</a>
